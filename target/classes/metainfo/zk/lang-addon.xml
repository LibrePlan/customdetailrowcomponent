<language-addon>
    <addon-name>customdetailrowcomponent</addon-name>
  	<version>
		<version-class>com.igalia.java.zk.components.customdetailrowcomponent.Version</version-class>
		<version-uid>0.0.1-SNAPSHOT</version-uid>
		<zk-version>5.0.6</zk-version><!-- or later -->
	</version>
    
	<language-name>xul/html</language-name>
	<component>
		<component-name>detail</component-name> <!-- required -->
		<component-class>com.igalia.java.zk.components.customdetailrowcomponent.Detail</component-class> <!-- required -->
		<widget-class>customdetailrowcomponent.Detail</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/detail.js</mold-uri>

			<!--
			== Tip in advance ==
				You don't have to specify a css.dsp if you need not ,
				but usually you need it.

				You could assign a .css file ,too.

				The css.dsp is almost as same as CSS file ,
				but have more powerful enhancement.	(like EL support.)
			====
			-->
			<css-uri>css/detail.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>